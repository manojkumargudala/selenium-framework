<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1
        http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>selenium-framework-assembly</id>
	<formats>
		<format>jar</format>
	</formats>
	<files>
		<file>
			<source>${webdriver.chrome.driver}</source>
			<outputDirectory>/binaries</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/binares/</outputDirectory>
			<excludes>
				<exclude>*.exe</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>